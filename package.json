{
  "name": "polymer-starter-kit",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-google": "^0.7.0",
    "eslint-plugin-html": "^2.0.0"
  },
  "scripts": {
    "lint": "npm run lint:javascript",
    "lint:javascript": "eslint . --ext js,html --ignore-path .gitignore",
    "test": "polymer test",
    "test:integration": "polymer build # test that psk builds without error with the CLI",
    "build:prod": "polymer build --js-compile --js-minify --css-minify --html-minify --bundle --add-service-worker --add-push-manifest --sw-precache-config --env PROD --entrypoint index.html",
    "serve:prod": "php -ddoc.root=build -S localhost:4201 -t ./build/"
  }
}
